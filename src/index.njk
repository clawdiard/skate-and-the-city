          <div class="flex items-center gap-2 mt-1">
            <span class="text-xs px-2 py-0.5 rounded-full bg-skate-muted text-skate-text-secondary">{{ spot.type | default("spot") }}</span>
            <span class="text-xs text-skate-text-dim">{{ spot.borough }}</span>
