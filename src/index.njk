{# Hero Section #}
<section class="hero -mx-4 -mt-8 px-4">
  <div class="hero-glow"></div>
  <div class="relative z-10">
    <img src="{{ '/assets/icons/logo.svg' | url }}" alt="Skate And the City" class="mx-auto w-80 md:w-[28rem] mb-6">
    <p class="hero-subtitle text-xl md:text-2xl font-light">
      Your guide to skating <span class="text-skate-accent font-semibold">NYC</span>
    </p>
    <p class="text-skate-text-secondary mt-2 max-w-lg mx-auto">
      Every spot, route, shop &amp; taco within pushing distance.
    </p>
    <div class="mt-8 flex flex-wrap justify-center gap-4">
      <a href="{{ '/map/' | url }}" class="btn-primary btn-lg">ğŸ—ºï¸ Explore Map</a>
      <a href="{{ '/routes/' | url }}" class="btn-secondary btn-lg">ğŸ›¹ Browse Routes</a>
    </div>
  </div>
</section>

{# Featured Routes Carousel #}
<section class="mt-16">
  <h2 class="font-display text-3xl text-skate-text tracking-wide mb-6">Featured Routes</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for route in allRoutes | default([]) %}
      {% if loop.index0 < 3 %}
      <a href="{{ ('/routes/' + route.id + '/') | url }}" class="card group hover:border-skate-accent transition-colors">
        <div class="card-body">
          <div class="flex items-center justify-between mb-2">
            <span class="text-2xl">ğŸ›¤ï¸</span>
            <span class="text-xs text-skate-text-dim">{{ route.distance }}</span>
          </div>
          <h3 class="font-display text-xl text-skate-text group-hover:text-skate-accent transition-colors">{{ route.name }}</h3>
          <p class="text-sm text-skate-text-secondary mt-1">{{ route.borough }}</p>
          <div class="mt-3 flex items-center gap-1">
            {% for i in range(route.difficulty | default(1)) %}<span class="text-skate-accent text-xs">â­</span>{% endfor %}
            <span class="text-xs text-skate-text-dim ml-1">Difficulty</span>
          </div>
          <p class="text-xs text-skate-text-dim mt-2">{{ route.stops | length }} stops</p>
        </div>
      </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

{# Popular Spots #}
<section class="mt-16">
  <div class="flex items-center justify-between mb-6">
    <h2 class="font-display text-3xl text-skate-text tracking-wide">Popular Spots</h2>
    <a href="{{ '/spots/' | url }}" class="text-sm text-skate-accent hover:text-skate-accent-hover transition-colors">View all â†’</a>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    {% set spotList = allSpots | default([]) %}
    {% for spot in spotList %}
      {% if loop.index0 < 8 %}
      <a href="{{ ('/spots/' + spot.id + '/') | url }}" class="card group hover:border-skate-accent transition-colors">
        <div class="card-body py-4">
          <h3 class="font-semibold text-skate-text group-hover:text-skate-accent transition-colors text-sm">{{ spot.name }}</h3>
          <div class="flex items-center gap-2 mt-1">
            <span class="text-xs px-2 py-0.5 rounded-full bg-skate-muted text-skate-text-secondary">{{ spot.type | default("spot") }}</span>
            <span class="text-xs text-skate-text-dim">{{ spot.borough }}</span>
          </div>
        </div>
      </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

{# How It Works #}
<section class="mt-16">
  <h2 class="font-display text-3xl text-skate-text tracking-wide mb-8 text-center">How It Works</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="text-center">
      <div class="text-5xl mb-4">ğŸ“</div>
