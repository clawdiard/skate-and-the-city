{# Gear Up section for route pages #}
<section class="mt-12 mb-8">
  <h2 class="text-xl font-bold text-white mb-2">ðŸŽ’ Gear Up for This Route</h2>
  <p class="text-gray-400 text-sm mb-6">Recommended gear for a safe, smooth ride. Affiliate links help keep this site free.</p>

  <div class="grid gap-4 sm:grid-cols-2">
    {% for category in affiliates.gearRecommendations %}
    <div class="bg-skate-surface rounded-lg border border-skate-accent/20 p-4">
      <h3 class="text-skate-accent font-semibold mb-3">{{ category.category }}</h3>
      {% for item in category.items %}
      <div class="{% if not loop.first %}mt-3 pt-3 border-t border-gray-700{% endif %}">
        <a href="{{ item.amazonUrl }}?tag={{ affiliates.amazonTag }}&utm_source={{ affiliates.utmSource }}&utm_medium={{ affiliates.utmMedium }}&utm_campaign=gear-{{ route.id }}"
           target="_blank" rel="noopener sponsored"
           class="text-white hover:text-skate-accent transition font-medium text-sm"
           data-affiliate="amazon"
           data-product="{{ item.name | lower | replace(' ', '-') }}">
          {{ item.name }} â†—
        </a>
        <p class="text-gray-400 text-xs mt-1">{{ item.description }}</p>
      </div>
      {% endfor %}
    </div>
    {% endfor %}
  </div>

  {% include "affiliate-disclosure.njk" %}
</section>
