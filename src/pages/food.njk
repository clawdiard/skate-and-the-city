<section class="space-y-8">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-display text-white mb-2">üçï Food Spots</h1>
    <p class="text-gray-400 max-w-xl mx-auto">Skater-approved refueling stops across NYC. Cheap, fast, and worth the trip.</p>
  </div>

  {# Group by neighborhood #}
  {% set neighborhoods = [] %}
  {% for item in allFood %}
    {% if item.neighborhood not in neighborhoods %}
      {% set neighborhoods = (neighborhoods.push(item.neighborhood), neighborhoods) %}
    {% endif %}
  {% endfor %}

  {% for hood in neighborhoods %}
  <div>
    <h2 class="text-xl font-display text-skate-accent mb-4">{{ hood }}</h2>
    <div class="grid gap-4 sm:grid-cols-2">
      {% for item in allFood %}
        {% if item.neighborhood == hood %}
        <a href="{{ ('/food/' + item.id + '/') | url }}" class="block bg-skate-surface rounded-lg p-5 border border-skate-accent/20 hover:border-skate-accent/60 transition group">
          <div class="flex items-start justify-between">
            <h3 class="text-lg font-semibold text-white group-hover:text-skate-accent transition">{{ item.name }}</h3>
            <span class="text-sm text-gray-500">{{ item.priceRange }}</span>
          </div>
          <p class="text-xs text-gray-500 mt-0.5">{{ item.cuisine }}</p>
          <p class="text-sm text-gray-300 mt-2">{{ item.description | truncate(100) }}</p>
        </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  {% endfor %}
</section>
